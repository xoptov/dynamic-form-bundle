<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <mapped-superclass name="Xoptov\DynamicFormBundle\Entity\Field">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>
        <field name="formType" column="form_type" type="string"/>
        <field name="priority" type="integer"/>
        <many-to-one target-entity="Xoptov\DynamicFormBundle\Model\FormInterface" field="form" inversed-by="fields">
            <join-column name="form_id" referenced-column-name="id"/>
        </many-to-one>
        <many-to-one target-entity="Xoptov\DynamicFormBundle\Model\PropertyInterface" field="property">
            <join-column name="property_id" referenced-column-name="id"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>