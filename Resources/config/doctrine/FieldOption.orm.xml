<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <mapped-superclass name="Xoptov\DynamicFormBundle\Entity\FieldOption">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>
        <field name="name" column="name" type="string"/>
        <field name="valueBoolean" column="value_boolean" type="boolean" nullable="true"/>
        <field name="valueFloat" column="value_float" type="float" nullable="true"/>
        <field name="valueString" column="value_string" type="string" nullable="true"/>
        <field name="valueSet" column="value_set" type="array" nullable="true"/>
        <many-to-one target-entity="Xoptov\DynamicFormBundle\Model\FieldOptionInterface" field="parent" inversed-by="children">
            <join-column name="parent_id" referenced-column-name="id"/>
        </many-to-one>
        <many-to-one target-entity="Xoptov\DynamicFormBundle\Model\FieldInterface" field="field" inversed-by="options">
            <join-column name="field_id" referenced-column-name="id"/>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>