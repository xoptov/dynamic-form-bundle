<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="xdf.filter_type.subscriber" class="Xoptov\DynamicFormBundle\Form\EventListener\FilterTypeSubscriber">
            <argument type="service" id="xdf.filter.manager"/>
        </service>

        <service id="xdf.form.filter_type" class="Xoptov\DynamicFormBundle\Form\Type\FilterType">
            <argument type="service" id="xdf.filter_type.subscriber"/>
            <tag name="form.type"/>
        </service>

        <service id="xdf.filter.manager" class="Xoptov\DynamicFormBundle\Service\FilterManager"/>

    </services>

</container>
